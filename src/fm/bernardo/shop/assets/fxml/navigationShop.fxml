<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<AnchorPane fx:id="navigationShop" styleClass="navBar" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fm.bernardo.shop.Controller">
    <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
            <ColumnConstraints hgrow="SOMETIMES" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
        <Button mnemonicParsing="false" onAction="#loadShop" styleClass="buttons" text="Shop" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
        <Button alignment="TOP_LEFT" mnemonicParsing="false" onAction="#loadCart" styleClass="buttons" text="Bestellungen" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
        <Button mnemonicParsing="false" onAction="#loadInfo" styleClass="buttons" text="Info" GridPane.columnIndex="5" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
      <Button fx:id="accountName" layoutX="139.0" layoutY="13.0" mnemonicParsing="false" onAction="#accountClick" styleClass="buttons" text="{ACCOUNT}" GridPane.columnIndex="6" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
         <contextMenu>
            <ContextMenu fx:id="accountContext">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#loadSettings" text="Einstellungen" />
                  <MenuItem mnemonicParsing="false" onAction="#logout" text="Abmelden" />
              </items>
            </ContextMenu>
         </contextMenu></Button>
    </GridPane>
</AnchorPane>
