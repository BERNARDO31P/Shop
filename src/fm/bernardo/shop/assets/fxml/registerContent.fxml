   <PasswordField fx:id="registerPasswordRepeat" layoutX="110.0" layoutY="65.0" onAction="#register" promptText="Passwort wiederholen" AnchorPane.leftAnchor="100.0" AnchorPane.rightAnchor="100.0" AnchorPane.topAnchor="125.0" />
    <Button mnemonicParsing="false" onAction="#register" text="Senden" AnchorPane.bottomAnchor="50.0" AnchorPane.rightAnchor="100.0" />
</AnchorPane>
